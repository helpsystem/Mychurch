{
  "name": "iranian-christian-church-of-d.c.-website.v4",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist",
    "build:prod": "NODE_ENV=production vite build",
    "build:staging": "NODE_ENV=staging vite build",
    "preview": "vite preview",
    "preview:prod": "vite build && vite preview",
    "start": "serve -s dist -l 5000",
    "start-all": "concurrently \"npm run dev\" \"npm run backend\"",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "optimize:images": "node scripts/optimize-images.js",
    "bible:sqlite": "node scripts/db/import-bible-data.js",
    "bible:dir": "cross-env BIBLE_SOURCE_MODE=directory node scripts/db/import-bible-data.js",
    "db:create:bible": "node scripts/db/create-bible-tables.js",
    "health": "node scripts/health-check.js",
    "deploy:package": "powershell -ExecutionPolicy Bypass -File scripts/deploy/upload-and-push.ps1",
    "db:check": "node scripts/db/connection-check.js",
    "deploy:full": "npm run build && npm run deploy:package",
    "docker:dev": "docker-compose --profile development up -d",
    "docker:prod": "docker-compose --profile production --profile monitoring up -d",
    "docker:stop": "docker-compose down",
    "backup:create": "docker-compose exec postgres pg_dump -U postgres mychurch > backups/backup_$(date +%Y%m%d_%H%M%S).sql",
    "backup:restore": "docker-compose exec -T postgres psql -U postgres -d mychurch",
    "logs:backend": "docker-compose logs -f backend",
    "logs:health": "docker-compose logs -f healthcheck",
    "test": "echo \"Tests not configured yet\" && exit 0"
  },
  "dependencies": {
    "@google/genai": "^1.9.0",
    "@supabase/supabase-js": "^2.58.0",
    "axios": "^1.7.2",
    "basic-ftp": "^5.0.5",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jquery": "^3.7.1",
    "jquery-easing": "^0.0.1",
    "lucide-react": "^0.525.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-pageflip": "^2.0.3",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.6.3",
    "serve": "^14.2.1",
    "sqlite3": "^5.1.7",
    "twilio": "^5.9.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "concurrently": "^9.2.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
